<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="bigWrapper">
        <div class="image-container"></div>
        <nav>
            <ul class="navbar-list">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("About Us", "Index", "Home")</li>
                <li>@Html.ActionLink("Legal", "Index", "Home")</li>
                <li>@Html.ActionLink("Register", "Index", "Home")</li>
            </ul>
        </nav>
        <div class="body-content">
            @RenderBody()
        </div>

        <footer>
           <p>Plant Photos and Information by: MissouriPlants.com Retrevied: Feb 08 </p>
           <span>@Html.ActionLink("Contact Us", "Index", "Home")</span>
        </footer>
    </div>


@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
